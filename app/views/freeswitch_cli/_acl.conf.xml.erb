<configuration name="acl.conf" description="Network Lists">

  <network-lists>
  
    <list name="trusted" default="deny">
    
    <% @networks.each do |network| %>        
    <node type="allow" cidr="<%="#{network}" %>"/>        
    <% end %>      
            
    </list>
    
    <list name="domains" default="deny">    
      <node type="allow" domain="$${domain}"/>      
    </list>
  
  </network-lists>

</configuration>              


